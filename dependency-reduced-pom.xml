<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.cabral.navegador</groupId>
  <artifactId>cabralnavegador</artifactId>
  <version>1.0</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <transformers>
                <transformer>
                  <mainClass>com.cabral.navegador.Main</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>linux</id>
      <properties>
        <platform>gtk.linux</platform>
      </properties>
    </profile>
    <profile>
      <id>windows</id>
      <properties>
        <platform>win32.win32</platform>
      </properties>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>Equo-Chromium</id>
      <url>https://dl.equo.dev/chromium-swt-ce/oss/mvn</url>
    </repository>
  </repositories>
  <properties>
    <maven.compiler.target>17</maven.compiler.target>
    <maven.compiler.source>17</maven.compiler.source>
    <chromium.platform.version>128.0.0</chromium.platform.version>
    <flags>Dempty</flags>
    <chromium.version>128.0.0</chromium.version>
  </properties>
</project>
